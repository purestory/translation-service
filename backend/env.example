# Translation Service Backend Environment Variables

# 서버 설정
PORT=3501
NODE_ENV=production

# AI API 키들 (선택사항 - 없으면 해당 엔진 비활성화)
# DeepL API 키
DEEPL_API_KEY=

# OpenAI API 키
OPENAI_API_KEY=

# Anthropic Claude API 키
ANTHROPIC_API_KEY=

# Google Gemini API 키
GEMINI_API_KEY=

# Groq API 키
GROQ_API_KEY=

# Ollama 서버 URL (기본값: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# 로그 설정
LOG_LEVEL=info 